package strings_and_arrays;

public class Continuous_SubArray_with_MaxSum {

	private void mai() {
		// TODO Auto-generated method stub


		int[] a = new int[] {3,-1,4,5,-2,6,2,3,-1,2,5};

		int sum = 0;
		int max_sum = 0;

		for(int i =0 ;  i<a.length; i++) {

			sum = sum+a[i];
			if(sum<0) {
				sum = 0;
			}
			
			if(sum>max_sum) {
				max_sum = sum;
			}
		}

System.out.println(max_sum);


	}
}
